{% extends 'layout.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block content %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .card {
            margin-bottom: 10px;
        }
        .test {
            font-size: x-large;
        }
    </style>

    {% if is_granted('ROLE_USER') %}
        <div class="text-right mb-2">
            <a href="{{ path('post-new') }}" class="btn btn-primary">
                Nouveau post
            </a>
        </div>
    {% endif %}

    <h1 class="mt-2">
        {{ 'posts_list' | trans }}</h1>

    {% include 'post/_post-table.html.twig' %}
{% endblock %}

{% block aside %}
    {% include '_aside.html.twig' %}
{% endblock %}
